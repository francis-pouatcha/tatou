<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
                            <div class="row-fluid">
                                <div class="span8">
                                    <div class="box">
                                        <header>
                                            <div class="icons"><i class="icon-list"></i></div>
                                            <h5>Unites de Mesures</h5>
                                            <div class="btn-group">
                                    <a style="float: left" class="btn btn-inverse" rel="tooltip" data-original-title="E-mail" data-placement="bottom">
                                        <i class="icon-envelope"></i>
                                         <span class="label label-warning">5</span>
                                    </a>
                                    <a class="btn btn-inverse" rel="tooltip" href="#" data-original-title="Messages"
                                       data-placement="bottom">
                                        <i class="icon-comments"></i>
                                        <span class="label label-important">4</span>
                                    </a>
                                </div>
                                        </header>
                                        <div id="collapse4" class="body">
                                            <form class="form-search">
                                                <b:ListBox ui:field="udmSearch"></b:ListBox>
                                                <div class="input-append">
                                                    <b:TextBox ui:field="query" styleName="input-large search-query"> </b:TextBox>
                                                    <g:Button ui:field="search" styleName="btn"></g:Button>
                                                </div>
                                            </form>
                                            <b:SimplePager visible="false" ui:field="pager" location='LEFT' ></b:SimplePager>
                                            <g:ScrollPanel  width="100%" height ="400px">
                                                  <b:CellTable condensed="true" striped="true" bordered="true" ui:field="udmTable" > </b:CellTable>
                                            </g:ScrollPanel>
                                        </div>
                                    </div>
                                </div>
                                <div class="span4">
                                    <div class="box">
                                        <header>
                                            <div class="icons"><i class="icon-pencil"></i></div>
                                            <h5>AJouter / Modifier </h5>
                                        </header>
                                        <div class="block">
                                            <div id="collapseOne" class="accordion-body collapse in body">
                                                <form action="#" class="form-vertical" id="block-validate">
                                                    <div class="control-group">
                                                        <label class="control-label">Libelle :</label>
                                                        <div class="controls">
                                                            <b:TextBox ui:field="name"> </b:TextBox>
                                                        </div>
                                                    </div>
                                                    <div class="control-group">
                                                        <label class="control-label">Categorie :</label>
                                                        <div class="controls">
                                                        <b:ListBox ui:field="udmGroup"></b:ListBox>
                                                        </div>
                                                    </div>
                                                    <div class="control-group">
                                                        <label class="control-label">Ratio :</label>
                                                        <div class="controls">
                                                            <b:TextBox ui:field="ratio"> </b:TextBox>
                                                        </div>
                                                    </div>
                                                    <div class="control-group">
                                                        <div class="controls">
                                                            <label class="checkbox inline">
                                                                 <b:CheckBox ui:field="actif"> </b:CheckBox>  Actif ?
                                                            </label>
                                                            <label class="checkbox inline">
                                                                <b:CheckBox ui:field="udmRef"> </b:CheckBox>  Udm De reference 
                                                            </label>
                                                        </div> 
                                                    </div>
                                                    <hr/>
                                                    <div style="float: left" >
                                                        <g:Button ui:field="save" styleName="btn btn-primary"></g:Button>
                                                        <input type="reset" value="Reset" class="btn btn-success" />
                                                        <g:Button ui:field="categorie" styleName="btn btn-warning"></g:Button>
                                                    </div>

                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

	</g:HTMLPanel>
</ui:UiBinder> 