<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
		.loginBox {
			width: 123%;
		}
	</ui:style>
	<g:HTMLPanel>
		
            <div class="row-fluid">
                <div class="span4 offset4">
                    <div class="signin">
                        <div id="logo">
                           <img src="App/img/tatou.png" alt="Metis Logo" />
                        </div>
                        <div  class="tab-content">
                            <div id="login" class="tab-pane active">
                                    <p class="muted tac">
                                        Saisir votre nom de connection  et mot de pass
                                    </p>
                                        <div class="control-group">
                                            <div class="input-prepend">
                                                <span class="add-on"><i class="icon-user"></i></span>
                                                <b:TextBox ui:field="userName" styleName="{style.loginBox}" placeholder="nom de connection"></b:TextBox>
                                            </div>
                                        </div>
                                        <div class="control-group">
                                            <div class="input-prepend">
                                                <span class="add-on"><i class="icon-lock"></i></span>
                                                <b:TextBox ui:field="password" styleName="{style.loginBox}" placeholder="mot de passe"></b:TextBox>
                                            </div>
                                        </div>
                                  <div class="controls">
                                  <b:Button ui:field="signIn"  styleName="btn btn-primary btn-block">Se connecter</b:Button>
                                   </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
	</g:HTMLPanel>
</ui:UiBinder> 